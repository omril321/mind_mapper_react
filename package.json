{
  "name": "mind_mapper_react",
  "version": "1.0.0",
  "description": "History Mind Mapper",
  "main": "index.js",
  "scripts": {
    "webpack": "webpack --progress --mode=production",
    "watch": "webpack --watch --progress --mode=development",
    "test": "jest --coverage && npm run lint",
    "test-unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tslint 'src/**/*.{tsx,ts}'"
  },
  "jest": {
    "setupFiles": [
      "./test/jestsetup.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!lodash-es)"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.jsx",
      "src/**/*.ts",
      "src/**/*.tsx",
      "!**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 80,
        "lines": 70,
        "statements": 70
      },
      "./src/components/**/*.tsx": {
        "branches": 0,
        "statements": 0
      }
    }
  },
  "pre-commit": "test",
  "author": "Omri Lavi",
  "license": "ISC",
  "dependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/lodash": "^4.14.77",
    "@types/react": "^16.0.9",
    "@types/react-dom": "^16.0.0",
    "@types/react-transition-group": "^1.1.2",
    "circlepacker": "^1.1.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-transition-group": "^1.2.1",
    "stopword": "^0.1.9"
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.0",
    "@types/jest": "^21.1.5",
    "ajv": "^6.0.0",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.1.4",
    "jest": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.5.3",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.9.1",
    "webpack": "^4.10",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4",
    "worker-loader": "^1.1.1"
  }
}
